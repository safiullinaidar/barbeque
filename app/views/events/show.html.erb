<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= image_tag "event_thumb.jpg", class: "event-background" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
          <div class="btn-group mb-3">
            <div class="me-2">
              <%= link_to t('event.update'), edit_event_path(@event),
                  class: 'btn btn-primary' %>
            </div>
            <div class="me-2">
              <%= button_to t('event.destroy'), event_path(@event), 
                  method: :delete, form: { data: { turbo_confirm: t('alert.are_you_sure') } }, class: 'btn btn-danger' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
