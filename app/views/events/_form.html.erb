<%= form_with model: @event, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="field mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="field mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions my-4">
    <%= f.submit 'Сохранить', class: 'btn btn-outline-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
