<%= form_with model: @event, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="field mb-4">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= f.label :datetime, class: 'form-label' %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="field mb-4">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= f.label :pincode, class: 'form-label' %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions my-4">
    <%= f.submit t('app.save'), class: 'btn btn-outline-primary' %>
    или <%= link_to t('app.return'), :back %>
  </div>
<% end %>
