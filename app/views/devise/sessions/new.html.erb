<div class="w-100 d-flex flex-column align-items-center">
  <h2 class="my-4 display-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
   
    <div class="field mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-muted form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'text-muted form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions my-4">
      <%= f.submit "Log in", class: 'btn btn-outline-primary' %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
