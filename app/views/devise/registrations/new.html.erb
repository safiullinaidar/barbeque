<div class="w-100 d-flex flex-column align-items-center">
  <h2 class="my-4 display-6">Регистрация</h2>
  
  <%= render partial: 'partials/registration', locals: {model: @user} %>

  <div class="col-md-3 col-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      
      <div class="actions mt-3">
        <%= f.submit "Зарегистрироваться", class: 'btn btn-outline-primary' %>
      </div>

    <% end %>
  </div>
</div>
