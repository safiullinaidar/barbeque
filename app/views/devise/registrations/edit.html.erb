<div class="w-100 d-flex flex-column align-items-center">
  <h2 class="my-4 display-6">Изменение пароля</h2>

  <div class="col-md-3 col-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field my-3">
        <%= f.label :password %> <i>(оставьте поле пустым, если не хотите менять)</i>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>не менее <%= @minimum_password_length %> символов</em>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password %> <i>(для подтверждения изменений)</i>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions my-4 ">
        <%= f.submit "Обновить", class: 'btn btn-outline-primary' %>
      </div>
    <% end %>

    <h3 class="my-3">Удалить аккаунт</h3>

    <p>Вам надоело? <%= button_to "Удалить аккаунт", registration_path(resource_name), 
                    method: :delete, form: { data: { turbo_confirm: "Вы уверены?" } }, class: 'btn btn-outline-danger' %></p>
  </div>

  <%= link_to "Назад", :back %>
</div>
